<div class="flickr_pagination mb-2">
  <%= paginate @orders%>
</div>

<div class="mb-3">
  <%= form_tag(orders_path, method: :get) do %>
    <%= text_field_tag(:search, params[:search]) %>
    <%= submit_tag ("Search") %>
  <% end %>
</div>

<div class="card">
  <div class="card-body">
    <% @orders.each_with_index do |order, index| %>
      <% if index != 0 %>
        <div class="row"><div class="col"><hr /></div></div>
      <% end %>

      <div class="row order" id="<%= dom_id(order) %>">
        <div class="col-sm-1 text-center">
            <strong><%= order.created_at.strftime("%b %d") %></strong>
        </div>
        <div class="col">
            <h4>Order number <%= link_to order.number, "/admin/orders/#{order.id}/edit/", class:""%></h4>
            <p>Selected products: </p>
              <%= order.products.each do |product| %>
                <p><%= product.description %></p>
                <p><%= product.price %></p>
              <% end %>
           
            <p>Delivery tax: <%= order.delivery_tax %></p>
            <p>Total price: <%= order.total_price %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>